<h1>Agende seu serviço!</h1>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/services/send" method="POST">
            <div class="row">
                <div class="form-group col-lg-6">
                    <label for='nome'> Nome do Pet: </label>
                        <input type="text" name="nomepet" class="form-control" required>
                </div>    
                <div class="form-group col-lg-6">
                    <label for="tipopet">Tipo do Pet:</label>
                    <select name="tipoPet" class="form-control" required>
                        <option value="">Selecione algo</option>
                        <option value="">Cachorro</option>
                        <option value="">Gato</option>
                    </select>
                </div>
            </div>     

            <div class="form-group">
                <label for='descricao'> Diagnóstico: </label>
                <textarea name="diagnostico" class="form-control" required></textarea>
            </div>

            <div class="row">
                <div class="form-group col-lg-4 mt-4">
                    <label for="exampleInputEmail1">Data:</label>
                    <input type="date" name="data" class="form-control" required>
                </div>     
                <div class="form-group col-lg-3 mt-4">                 
                    <label for="hora-cons">Escolha o horário da consulta:</label>
                    <input type="time" name="hora-cons" min="08:00" max="18:00" required>
                </div>
                <div class="form-group col-lg-3 mt-4">
                <label for='descricao'> Selecione o serviço: </label><br>    
                    <select name="servico" >
                        {{#each services}}
                            <option value="{{_id}}">{{name}}</option>
                        {{else}}
                            <option value="0"> Nenhum serviço registrado</option>
                        {{/each}}
                    </select>
                </div>      
            </div>                 
            
            <br>
            <button type="submit" class="btn btn-success">Cadastrar</button>    
        </form>
    </div>
</div>