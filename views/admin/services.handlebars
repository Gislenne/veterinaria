<h2> Lista de Serviços: </h2>
<hr>
<a href="/admin/services/add"><button class="btn btn-success">Novo Servico</button></a>

{{#each services}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Valor: {{price}}</small><br>
            <small>Descrição: {{description}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/services/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Serviço</button> </a>
        </div>    
    </div>
{{else}}

{{/each}}